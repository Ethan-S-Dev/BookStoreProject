<UserControl x:Class="BookStore.ViewModel.Controls.WorkerLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.ViewModel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Background="{StaticResource SoftBlueV3}"
                CornerRadius="5"
                Grid.ColumnSpan="3"/>
        <TextBlock  x:Name="fName"                     
                    Margin="2,10,5,4" Style="{StaticResource Text_v1}" Foreground="White"/>
        <TextBlock  Margin="2,10,5,4" x:Name="lName" Style="{StaticResource Text_v1}" Foreground="White" Grid.Column="1"/>
        <TextBlock  Margin="2,10,5,4" x:Name="uName" Style="{StaticResource Text_v1}" Foreground="White" Grid.Column="2"/>
    </Grid>
</UserControl>
