<UserControl x:Class="BookStore.Client.res.UserControls.ErrorMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Client.res.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="errorBox" Visibility="Collapsed" BorderBrush="SandyBrown" BorderThickness="2" Background="{StaticResource SoftSand}" >
        <TextBlock Style="{StaticResource ErrorText}" x:Name="errorTxt" Text="error" HorizontalAlignment="Center"/>
    </Border>
</UserControl>
